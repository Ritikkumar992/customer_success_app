<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragment.PageFragment.PageFragment1"
        android:background="@color/white"
        android:padding="10dp"
        android:layout_gravity="start"
        >
        <TextView
            android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="Scope and Stack"
        android:textSize="26sp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Project Technology's"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            />
    <Spinner
        android:id="@+id/spinnerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:background="@drawable/edit_text_border"
        />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project Scope"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="7dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/edit_text_border"
            android:hint="Write here"
            android:gravity="start"
            android:paddingStart="18dp"
            android:paddingTop="8dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/backBtnScopeStack"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="back"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background = "@drawable/button_background"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/continueBtnScopeStack"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textSize="18sp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background = "@drawable/button_background"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    </LinearLayout>