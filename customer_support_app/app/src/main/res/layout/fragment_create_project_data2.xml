<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    android:id="@+id/scroolView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".Fragment.PageFragment.PageFragment1"
            android:background="@color/white"
            android:padding="10dp"
            android:gravity="start"
            android:layout_margin="10dp"
            >


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:text="Invite Client"
                    android:textSize="26sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Name *"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    />
                <EditText
                    android:id="@+id/clientNameId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="Name "
                    android:gravity="start"
                    android:paddingStart="18dp"
                    android:paddingTop="8dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Client Email *"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    />
                <EditText
                    android:id="@+id/clientEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_border"
                    android:hint="example@gmail.co"
                    android:gravity="start"
                    android:paddingStart="18dp"
                    android:paddingTop="8dp"
                    />

                <TextView
                    android:id="@+id/addClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Add "
                    android:textSize="18sp"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:background = "@drawable/button_background1"
                    android:gravity="center"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >
                        <TextView
                            android:id="@+id/backBtnInviteClient"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="back"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:background = "@drawable/button_background"
                            android:gravity="center"
                            />
                        <TextView
                            android:id="@+id/sendBtnInviteClient"
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Send Invite"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            android:textColor="@color/white"
                            android:background = "@drawable/button_background"
                            android:gravity="center"
                            android:layout_marginLeft="20dp"
                            />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"/>
        </LinearLayout>
</ScrollView>