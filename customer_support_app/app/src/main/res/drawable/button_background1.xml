<!-- button_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Button pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey" />
            <corners android:radius="2dp" /> <!-- Button corner radius -->
        </shape>
    </item>
    <!-- Default button state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/light_grey" /> <!-- Default button background color -->
            <corners android:radius="8dp" /> <!-- Button corner radius -->
        </shape>
    </item>
</selector>